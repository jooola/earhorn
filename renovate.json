{
  "extends": [
    "config:recommended",
    ":enablePreCommit",
    ":automergePatch",
    ":semanticCommits"
  ],
  "labels": ["dependencies"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": ["after 4am and before 5am on monday"]
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "groupName": "httpx",
      "matchPackageNames": ["httpx", "pytest-httpx"]
    }
  ]
}
